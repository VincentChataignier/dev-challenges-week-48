; constants.inc - Constantes système pour gift_core
; ===========================================================================

; ---------------------------------------------------------------------------
; Numéros de syscalls Linux x86_64
; ---------------------------------------------------------------------------
SYS_READ        equ 0
SYS_WRITE       equ 1
SYS_CLOSE       equ 3
SYS_SOCKET      equ 41
SYS_CONNECT     equ 42
SYS_EXIT        equ 60

; ---------------------------------------------------------------------------
; Constantes socket
; ---------------------------------------------------------------------------
AF_INET         equ 2           ; IPv4
SOCK_STREAM     equ 1           ; TCP

; ---------------------------------------------------------------------------
; Descripteurs de fichiers standard
; ---------------------------------------------------------------------------
STDIN           equ 0
STDOUT          equ 1
STDERR          equ 2

; ---------------------------------------------------------------------------
; Codes de sortie
; ---------------------------------------------------------------------------
EXIT_SUCCESS    equ 0
EXIT_INPUT_ERR  equ 1
EXIT_RUNTIME_ERR equ 2

; ---------------------------------------------------------------------------
; Tailles de buffers
; ---------------------------------------------------------------------------
INPUT_SIZE      equ 4096
RESPONSE_SIZE   equ 65536
HTTP_REQ_SIZE   equ 16384
PROMPT_SIZE     equ 2048