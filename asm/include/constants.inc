; =============================================================================
; constants.inc - System constants for x86_64 Linux
; =============================================================================
; Usage: %include "include/constants.inc"
; =============================================================================

%ifndef CONSTANTS_INC
%define CONSTANTS_INC

; -----------------------------------------------------------------------------
; Linux x86_64 syscall numbers
; -----------------------------------------------------------------------------
SYS_READ        equ 0
SYS_WRITE       equ 1
SYS_CLOSE       equ 3
SYS_SOCKET      equ 41
SYS_CONNECT     equ 42
SYS_EXIT        equ 60

; -----------------------------------------------------------------------------
; Socket constants
; -----------------------------------------------------------------------------
AF_INET         equ 2           ; IPv4
SOCK_STREAM     equ 1           ; TCP

; -----------------------------------------------------------------------------
; Standard file descriptors
; -----------------------------------------------------------------------------
STDIN           equ 0
STDOUT          equ 1
STDERR          equ 2

; -----------------------------------------------------------------------------
; Exit codes
; -----------------------------------------------------------------------------
EXIT_SUCCESS     equ 0
EXIT_INPUT_ERR   equ 1
EXIT_RUNTIME_ERR equ 2

; -----------------------------------------------------------------------------
; Buffer sizes
; -----------------------------------------------------------------------------
INPUT_SIZE      equ 4096
RESPONSE_SIZE   equ 65536
HTTP_REQ_SIZE   equ 16384
PROMPT_SIZE     equ 2048

; -----------------------------------------------------------------------------
; Escape characters (HTTP)
; -----------------------------------------------------------------------------
%define CRLF 13,10

%endif ; CONSTANTS_INC
